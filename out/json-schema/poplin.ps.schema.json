{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://standardhealthrecord.org/schema/poplin/ps",
  "title": "TODO: Figure out what the title should be.",
  "definitions": {
    "Intent": {
      "type": "object",
      "properties": {
        "Value": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "codeSystem": {
              "type": "string",
              "format": "uri"
            },
            "displayText": {
              "type": "string"
            }
          },
          "required": [
            "code",
            "codeSystem"
          ]
        },
        "EntryType": {
          "$ref": "https://standardhealthrecord.org/schema/shr/base#/definitions/EntryType"
        }
      },
      "description": "Indicates the level of actionability associated with the Task. I.e. Is this a proposed task, a planned task, an actionable task, etc.",
      "required": [
        "Value",
        "EntryType"
      ]
    },
    "Task": {
      "allOf": [
        {
          "$ref": "https://standardhealthrecord.org/schema/shr/base#/definitions/Entry"
        },
        {
          "type": "object",
          "properties": {
            "Intent": {
              "allOf": [
                {
                  "properties": {
                    "Value": {
                      "valueSet": {
                        "uri": "https://www.hl7.org/fhir/valueset-request-intent.html",
                        "strength": "REQUIRED"
                      }
                    }
                  }
                },
                {
                  "$ref": "#/definitions/Intent"
                }
              ]
            }
          },
          "required": [
            "Intent"
          ]
        }
      ],
      "description": "TODO"
    }
  },
  "description": "A provider screening application for a healthcare organization.",
  "type": "object",
  "anyOf": [
    {
      "$ref": "#/definitions/Task"
    }
  ]
}